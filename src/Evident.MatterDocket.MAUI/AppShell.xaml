<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Evident.MatterDocket.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Evident.MatterDocket.MAUI.Views"
    Title="Evident Matter Docket"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="Login" />

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate views:DashboardPage}"
        Route="Dashboard" />

    <ShellContent
        Title="Upload"
        ContentTemplate="{DataTemplate views:UploadPage}"
        Route="Upload" />

    <ShellContent
        Title="AI Assistant"
        ContentTemplate="{DataTemplate views:ChatPage}"
        Route="Chat" />

</Shell>
