<!doctype html>
<html lang="en">
  <head>
    {% include "head.njk" %}
  </head>
  <body class="font-sans text-gray-900 bg-white antialiased">
    <a class="skip-link" href="#main">Skip to content</a>
    {% include "header.njk" %}

    <main id="main" class="site-container py-8 md:py-12 lg:py-16">
      {% block content %}{{ content | safe }}{% endblock %}
    </main>

    {% include "footer.njk" %}
      <script src="/assets/js/menu.js" defer></script>
      {% if page.extra_js %}{% for js in page.extra_js %}
        <script src="{{ js }}" defer></script>
      {% endfor %}{% endif %}
    </body>
</html>
