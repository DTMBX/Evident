<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Evident.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Evident.Mobile.Views"
    FlyoutBackgroundColor="{StaticResource Primary}"
    Shell.FlyoutBehavior="Flyout"
    Title="Evident Legal Tech">

    <Shell.FlyoutHeaderTemplate>
        <DataTemplate>
            <Grid BackgroundColor="{StaticResource Primary}" HeightRequest="200" Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Image Source="Evident_logo.png" 
                       HeightRequest="60" 
                       WidthRequest="60"
                       HorizontalOptions="Start"
                       Margin="0,20,0,10"/>
                
                <Label Grid.Row="1" 
                       Text="Evident Legal Tech"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"
                       Margin="0,10,0,5"/>
                
                <Label Grid.Row="2"
                       Text="Professional Legal Analysis"
                       FontSize="14"
                       TextColor="White"
                       Opacity="0.8"
                       VerticalOptions="Start"/>
            </Grid>
        </DataTemplate>
    </Shell.FlyoutHeaderTemplate>

    <!-- Main Tabs -->
    <TabBar>
        <ShellContent
            Title="Dashboard"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:DashboardPage}"
            Route="dashboard" />

        <ShellContent
            Title="Cases"
            Icon="folder.png"
            ContentTemplate="{DataTemplate local:CasesPage}"
            Route="cases" />

        <ShellContent
            Title="Analysis"
            Icon="chart.png"
            ContentTemplate="{DataTemplate local:AnalysisListPage}"
            Route="analysis" />

        <ShellContent
            Title="Upload"
            Icon="upload.png"
            ContentTemplate="{DataTemplate local:UploadPage}"
            Route="upload" />

        <ShellContent
            Title="Profile"
            Icon="person.png"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route="profile" />
    </TabBar>

    <!-- Flyout Menu Items -->
    <FlyoutItem Title="Legal Library" Icon="book.png">
        <ShellContent ContentTemplate="{DataTemplate local:LegalLibraryPage}" Route="library"/>
    </FlyoutItem>

    <FlyoutItem Title="Documents" Icon="document.png">
        <ShellContent ContentTemplate="{DataTemplate local:DocumentsPage}" Route="documents"/>
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="settings.png">
        <ShellContent ContentTemplate="{DataTemplate local:SettingsPage}" Route="settings"/>
    </FlyoutItem>

    <MenuItem Text="Help &amp; Support" 
              IconImageSource="help.png"
              Clicked="OnHelpClicked"/>

    <MenuItem Text="Logout" 
              IconImageSource="logout.png"
              Clicked="OnLogoutClicked"/>

</Shell>

