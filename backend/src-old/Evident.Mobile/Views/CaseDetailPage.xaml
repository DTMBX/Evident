<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Evident.Mobile.Views.CaseDetailPage"
             Title="{Binding CaseNumber}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="{Binding Title}" FontSize="24" FontAttributes="Bold"/>
            <Label Text="{Binding Description}" FontSize="16" TextColor="Gray"/>
            <Button Text="View Documents" Command="{Binding ViewDocumentsCommand}"/>
            <Button Text="View Videos" Command="{Binding ViewVideosCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

