{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "dotnet.defaultSolution": "BarberX.sln",

  // Documentation Output Paths - USE THESE FOR NEW .md FILES
  // =========================================================
  // api/           - API reference docs (endpoints, routes)
  // architecture/  - System design & architecture
  // deployment/    - Hosting guides (Render, Netlify, domains)
  // development/   - Dev workflow, bug fixes, testing
  // features/      - Feature documentation
  // guides/        - How-to guides & tutorials
  // integration/   - Third-party integrations
  // legal/         - Legal documents (TOS, Privacy, Licenses)
  // mission/       - Mission & values documentation
  // mobile/        - Mobile app docs (MAUI, iOS, Android)
  // releases/      - Release notes & changelogs
  // security-docs/ - Security implementation docs
  // setup/         - Setup & installation guides
  // status/        - Project status & completion reports
  // =========================================================

  "github.copilot.chat.codeGeneration.instructions": [
    {
      "text": "When creating new markdown documentation files (.md), place them in the appropriate docs/ subfolder: docs/status/ for completion reports, docs/setup/ for setup guides, docs/api/ for API docs, docs/features/ for feature docs, docs/deployment/ for hosting guides, docs/development/ for bug fixes, docs/guides/ for tutorials, docs/security-docs/ for security docs, docs/releases/ for changelogs. Only README.md should remain in the project root."
    }
  ]
}
