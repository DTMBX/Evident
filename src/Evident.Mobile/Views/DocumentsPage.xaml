<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Evident.Mobile.Views.DocumentsPage"
             Title="Documents">
    <Grid RowDefinitions="Auto,*,Auto" Padding="10">
        <SearchBar Grid.Row="0" Placeholder="Search documents..." Margin="10"/>
        <Label Grid.Row="1" Text="Your documents will appear here" 
               FontSize="16" TextColor="Gray" 
               HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button Grid.Row="2" Text="+ Upload Document" Margin="10"/>
    </Grid>
</ContentPage>
