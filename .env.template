# BarberX Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to Git!

# Flask Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your-secret-key-here-min-32-chars
DATABASE_URL=sqlite:///barberx.db

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PostHog Analytics (Optional)
POSTHOG_API_KEY=phc_your-posthog-api-key

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://your-sentry-dsn

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# HuggingFace (Optional - for embeddings)
HUGGINGFACE_TOKEN=hf_your-huggingface-token

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars
JWT_ISSUER=BarberX
JWT_AUDIENCE=BarberX

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=barberx-uploads
AWS_REGION=us-east-1

# Production URLs
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
ENABLE_BACKGROUND_JOBS=true
