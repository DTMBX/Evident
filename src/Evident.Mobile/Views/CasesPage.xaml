<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Evident.Mobile.Views.CasesPage"
             Title="Cases">
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="10">
        
        <!-- Search Bar -->
        <SearchBar Grid.Row="0" 
                   Placeholder="Search cases..."
                   Text="{Binding SearchText}"
                   SearchCommand="{Binding SearchCommand}"
                   Margin="10"/>

        <!-- Cases List -->
        <CollectionView Grid.Row="1" 
                       ItemsSource="{Binding Cases}"
                       SelectionMode="Single"
                       SelectedItem="{Binding SelectedCase}"
                       SelectionChangedCommand="{Binding CaseSelectedCommand}">
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                    <Label Text="No cases found" FontSize="18" TextColor="Gray"/>
                    <Button Text="Create New Case" Command="{Binding CreateCaseCommand}"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10,5" Padding="15" BackgroundColor="White" BorderColor="LightGray">
                        <Grid ColumnDefinitions="60,*,Auto" ColumnSpacing="15">
                            <Image Grid.Column="0" 
                                   Source="{Binding ThumbnailUrl, TargetNullValue='case_placeholder.png'}" 
                                   Aspect="AspectFill"
                                   WidthRequest="60" 
                                   HeightRequest="60"/>
                            
                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="{Binding CaseNumber}" 
                                       FontAttributes="Bold" 
                                       FontSize="16"/>
                                <Label Text="{Binding Title}" 
                                       FontSize="14"/>
                                <Label Text="{Binding ClientName}" 
                                       FontSize="12" 
                                       TextColor="Gray"/>
                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{Binding DocumentCount, StringFormat='{0} docs'}" 
                                           FontSize="12" 
                                           TextColor="Gray"/>
                                    <Label Text="{Binding VideoCount, StringFormat='{0} videos'}" 
                                           FontSize="12" 
                                           TextColor="Gray"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            
                            <VerticalStackLayout Grid.Column="2" Spacing="5">
                                <Frame BackgroundColor="{Binding StatusColor}" 
                                       Padding="8,4" 
                                       CornerRadius="5"
                                       HasShadow="False">
                                    <Label Text="{Binding Status}" 
                                           FontSize="12" 
                                           TextColor="White"/>
                                </Frame>
                                <Label Text="{Binding UpdatedAt, StringFormat='{0:MMM dd}'}" 
                                       FontSize="12" 
                                       TextColor="LightGray"
                                       HorizontalOptions="End"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Add New Case Button -->
        <Button Grid.Row="2" 
                Text="+ New Case"
                Command="{Binding CreateCaseCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                Margin="10"
                HeightRequest="50"/>
        
    </Grid>
    
</ContentPage>
