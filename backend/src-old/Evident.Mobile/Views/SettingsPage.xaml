<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Evident.Mobile.Views.SettingsPage"
             Title="Settings">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- App Settings -->
            <Label Text="App Settings" FontSize="20" FontAttributes="Bold"/>
            
            <Frame Padding="15" BackgroundColor="White" BorderColor="LightGray">
                <VerticalStackLayout Spacing="15">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Dark Mode" FontSize="16" VerticalOptions="Center"/>
                        <Switch Grid.Column="1" IsToggled="{Binding IsDarkMode}"/>
                    </Grid>
                    
                    <BoxView HeightRequest="1" BackgroundColor="LightGray"/>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Notifications" FontSize="16" VerticalOptions="Center"/>
                        <Switch Grid.Column="1" IsToggled="{Binding NotificationsEnabled}"/>
                    </Grid>
                    
                    <BoxView HeightRequest="1" BackgroundColor="LightGray"/>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Auto-sync" FontSize="16" VerticalOptions="Center"/>
                        <Switch Grid.Column="1" IsToggled="{Binding AutoSyncEnabled}"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Data & Privacy -->
            <Label Text="Data & Privacy" FontSize="20" FontAttributes="Bold"/>
            
            <Frame Padding="15" BackgroundColor="White" BorderColor="LightGray">
                <VerticalStackLayout Spacing="15">
                    <Button Text="Clear Cache" 
                            Command="{Binding ClearCacheCommand}"
                            BackgroundColor="Transparent"
                            TextColor="Black"
                            HorizontalOptions="Start"/>
                    
                    <BoxView HeightRequest="1" BackgroundColor="LightGray"/>
                    
                    <Button Text="Download My Data" 
                            Command="{Binding DownloadDataCommand}"
                            BackgroundColor="Transparent"
                            TextColor="Black"
                            HorizontalOptions="Start"/>
                    
                    <BoxView HeightRequest="1" BackgroundColor="LightGray"/>
                    
                    <Button Text="Privacy Policy" 
                            Command="{Binding ViewPrivacyPolicyCommand}"
                            BackgroundColor="Transparent"
                            TextColor="Black"
                            HorizontalOptions="Start"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Subscription -->
            <Label Text="Subscription" FontSize="20" FontAttributes="Bold"/>
            
            <Frame Padding="15" BackgroundColor="White" BorderColor="LightGray">
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding CurrentTier, StringFormat='Current Plan: {0}'}" 
                           FontSize="16" 
                           FontAttributes="Bold"/>
                    <Label Text="{Binding SubscriptionStatus}" 
                           FontSize="14" 
                           TextColor="Gray"/>
                    <Button Text="Manage Subscription" 
                            Command="{Binding ManageSubscriptionCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>

            <!-- About -->
            <Label Text="About" FontSize="20" FontAttributes="Bold"/>
            
            <Frame Padding="15" BackgroundColor="White" BorderColor="LightGray">
                <VerticalStackLayout Spacing="15">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0" Text="Version" FontSize="16"/>
                        <Label Grid.Column="1" Text="{Binding AppVersion}" FontSize="16" TextColor="Gray"/>
                    </Grid>
                    
                    <BoxView HeightRequest="1" BackgroundColor="LightGray"/>
                    
                    <Button Text="Terms of Service" 
                            Command="{Binding ViewTermsCommand}"
                            BackgroundColor="Transparent"
                            TextColor="Black"
                            HorizontalOptions="Start"/>
                    
                    <BoxView HeightRequest="1" BackgroundColor="LightGray"/>
                    
                    <Button Text="Help & Support" 
                            Command="{Binding ViewHelpCommand}"
                            BackgroundColor="Transparent"
                            TextColor="Black"
                            HorizontalOptions="Start"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Danger Zone -->
            <Label Text="Account" FontSize="20" FontAttributes="Bold" TextColor="Red"/>
            
            <Frame Padding="15" BackgroundColor="White" BorderColor="Red">
                <VerticalStackLayout Spacing="15">
                    <Button Text="Logout" 
                            Command="{Binding LogoutCommand}"
                            BackgroundColor="Orange"
                            TextColor="White"/>
                    
                    <Button Text="Delete Account" 
                            Command="{Binding DeleteAccountCommand}"
                            BackgroundColor="Red"
                            TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>

