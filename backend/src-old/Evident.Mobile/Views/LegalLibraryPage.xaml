<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Evident.Mobile.Views.LegalLibraryPage"
             Title="Legal Library">
    <Grid RowDefinitions="Auto,*" Padding="10">
        <SearchBar Grid.Row="0" Placeholder="Search legal resources..." Margin="10"/>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20">
                <Label Text="Legal Library" FontSize="24" FontAttributes="Bold"/>
                <Label Text="Access case law, statutes, and legal resources" FontSize="14" TextColor="Gray"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>

