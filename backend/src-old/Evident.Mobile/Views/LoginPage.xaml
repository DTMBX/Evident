<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Evident.Mobile.ViewModels"
             x:Class="Evident.Mobile.Views.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#0f172a">

    <ScrollView>
        <VerticalStackLayout Padding="40" Spacing="20" VerticalOptions="Center">
            
            <!-- Logo -->
            <Image Source="Evident_logo.png" 
                   HeightRequest="80"
                   Margin="0,0,0,40"/>
            
            <!-- Title -->
            <Label Text="Evident Legal Tech"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"/>
            
            <Label Text="Professional BWC Analysis"
                   FontSize="16"
                   TextColor="#94a3b8"
                   HorizontalOptions="Center"
                   Margin="0,0,0,40"/>
            
            <!-- Email Input -->
            <Frame BackgroundColor="#1e293b" 
                   BorderColor="#334155"
                   CornerRadius="12"
                   Padding="0"
                   HasShadow="False">
                <Entry Placeholder="Email"
                       PlaceholderColor="#64748b"
                       Text="{Binding Email}"
                       TextColor="White"
                       Keyboard="Email"
                       Margin="16,12"/>
            </Frame>
            
            <!-- Password Input -->
            <Frame BackgroundColor="#1e293b" 
                   BorderColor="#334155"
                   CornerRadius="12"
                   Padding="0"
                   HasShadow="False">
                <Entry Placeholder="Password"
                       PlaceholderColor="#64748b"
                       Text="{Binding Password}"
                       TextColor="White"
                       IsPassword="True"
                       Margin="16,12"/>
            </Frame>
            
            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="#ef4444"
                   FontSize="14"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                   Margin="0,0,0,10"/>
            
            <!-- Login Button -->
            <Button Text="Sign In"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#3b82f6"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Margin="0,20,0,0">
                <Button.Shadow>
                    <Shadow Brush="#3b82f6" Opacity="0.3" Radius="10" Offset="0,4"/>
                </Button.Shadow>
            </Button>
            
            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                              IsVisible="{Binding IsBusy}"
                              Color="#3b82f6"
                              HeightRequest="40"/>
            
            <!-- Register Link -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,20,0,0">
                <Label Text="Don't have an account?"
                       TextColor="#94a3b8"
                       FontSize="14"/>
                <Label Text="Sign Up"
                       TextColor="#3b82f6"
                       FontSize="14"
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding RegisterCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>

