{
  "encryption": {
    "enabled": false,
    "note": "Placeholder config to satisfy CI security check. Replace with real config if required."
  },
  "encrypt_globs": [
    ".env",
    ".env.*",
    "instance/*.db",
    "instance/*.sqlite",
    "instance/*.sqlite3",
    "instance/*.db-shm",
    "instance/*.db-wal",
    "uploads/**",
    "logs/**",
    "secrets/**",
    "keys/**",
    "**/*.pem",
    "**/*.pfx",
    "**/*.p12",
    "**/*.key",
    "**/*.kdbx"
  ],
  "exclude_globs": [
    "secure/**",
    ".git/**",
    "node_modules/**",
    "venv/**",
    ".venv/**",
    "**/bin/**",
    "**/obj/**",
    "**/__pycache__/**"
  ]
}
