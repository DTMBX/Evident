      "src": "/assets/screenshots/mobile-chat.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "AI Legal Assistant"
    }
  ],
  "shortcuts": [
    {
      "name": "Document Review",
      "short_name": "Workspace",
      "description": "Open document review workspace",
      "url": "/workspace?source=shortcut",
      "icons": [{ "src": "/assets/icons/workspace-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "Upload Document",
      "short_name": "Upload",
      "description": "Upload a new document for analysis",
      "url": "/workspace?action=upload&source=shortcut",
      "icons": [{ "src": "/assets/icons/upload-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "AI Assistant",
      "short_name": "Chat",
      "description": "Chat with AI legal assistant",
      "url": "/chat?source=shortcut",
      "icons": [{ "src": "/assets/icons/chat-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "View Cases",
      "short_name": "Cases",
      "description": "Browse all legal cases",
      "url": "/cases/?source=shortcut",
      "icons": [{ "src": "/assets/icons/cases-icon.png", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "/api/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "documents",
          "accept": ["application/pdf", "text/plain", ".doc", ".docx", "application/msword"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/open-document",
      "accept": {
        "application/pdf": [".pdf"],
        "text/plain": [".txt"],
        "application/msword": [".doc"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+Evident",
      "url": "/protocol-handler?url=%s"
    }
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "related_applications": [],
  "prefer_related_applications": false
}
