{
  "name": "evident-repo-tools",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "npm run lint:css && npm run format:check:site",
    "lint:css": "stylelint \"site/components/*.css\" \"site/assets/css/**/*.css\"",
    "format": "prettier --write \"**/*.{css,html,md,js,ts,tsx,jsx,json}\"",
    "format:check": "prettier --check \"**/*.{css,html,md,js,ts,tsx,jsx,json}\"",
    "format:check:site": "prettier --check \"site/**/*.{css,html,md,js,json}\" \"README.md\" \"package.json\"",
    "build": "node ./scripts/ci-webpack.js"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "stylelint": "^17.1.1",
    "stylelint-config-standard": "^40.0.0",
    "webpack-cli": "^5.1.1"
  }
}

