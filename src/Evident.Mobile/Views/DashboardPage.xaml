<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Evident.Mobile.Views.DashboardPage"
             Title="Dashboard">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Welcome Header -->
            <Frame BackgroundColor="{StaticResource Primary}" CornerRadius="10" Padding="20">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Welcome to Evident" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           TextColor="White"/>
                    <Label Text="{Binding UserName}" 
                           FontSize="18"
                           TextColor="White"
                           Opacity="0.9"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Quick Stats -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="10" RowSpacing="10">
                <Frame Grid.Column="0" Grid.Row="0" BackgroundColor="{StaticResource Secondary}" Padding="15">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding TotalCases}" FontSize="32" FontAttributes="Bold" TextColor="White"/>
                        <Label Text="Active Cases" FontSize="14" TextColor="White" Opacity="0.8"/>
                    </VerticalStackLayout>
                </Frame>
                
                <Frame Grid.Column="1" Grid.Row="0" BackgroundColor="{StaticResource Tertiary}" Padding="15">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding TotalAnalyses}" FontSize="32" FontAttributes="Bold" TextColor="White"/>
                        <Label Text="Analyses" FontSize="14" TextColor="White" Opacity="0.8"/>
                    </VerticalStackLayout>
                </Frame>
                
                <Frame Grid.Column="0" Grid.Row="1" BackgroundColor="#4CAF50" Padding="15">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding TotalDocuments}" FontSize="32" FontAttributes="Bold" TextColor="White"/>
                        <Label Text="Documents" FontSize="14" TextColor="White" Opacity="0.8"/>
                    </VerticalStackLayout>
                </Frame>
                
                <Frame Grid.Column="1" Grid.Row="1" BackgroundColor="#FF9800" Padding="15">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="{Binding TotalVideos}" FontSize="32" FontAttributes="Bold" TextColor="White"/>
                        <Label Text="Videos" FontSize="14" TextColor="White" Opacity="0.8"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Quick Actions -->
            <Label Text="Quick Actions" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0"/>
            
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" RowSpacing="10">
                <Button Grid.Column="0" 
                        Text="Upload Video"
                        Command="{Binding NavigateToUploadCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        HeightRequest="60"/>
                
                <Button Grid.Column="1"
                        Text="New Case"
                        Command="{Binding CreateNewCaseCommand}"
                        BackgroundColor="{StaticResource Secondary}"
                        TextColor="White"
                        HeightRequest="60"/>
            </Grid>

            <!-- Recent Activity -->
            <Label Text="Recent Activity" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0"/>
            
            <CollectionView ItemsSource="{Binding RecentActivities}" 
                           SelectionMode="Single"
                           SelectedItem="{Binding SelectedActivity}"
                           SelectionChangedCommand="{Binding ActivitySelectedCommand}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5" Padding="15" BackgroundColor="White" BorderColor="LightGray">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                <Image Grid.Column="0" 
                                       Source="{Binding Icon}" 
                                       WidthRequest="40" 
                                       HeightRequest="40"/>
                                
                                <VerticalStackLayout Grid.Column="1" Spacing="5">
                                    <Label Text="{Binding Title}" 
                                           FontAttributes="Bold" 
                                           FontSize="16"/>
                                    <Label Text="{Binding Description}" 
                                           FontSize="14" 
                                           TextColor="Gray"/>
                                    <Label Text="{Binding Timestamp, StringFormat='{0:MMM dd, yyyy HH:mm}'}" 
                                           FontSize="12" 
                                           TextColor="LightGray"/>
                                </VerticalStackLayout>
                                
                                <Image Grid.Column="2" 
                                       Source="chevron_right.png" 
                                       WidthRequest="20" 
                                       HeightRequest="20"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Usage Meter (for Free Tier) -->
            <Frame IsVisible="{Binding IsFreeTier}" 
                   BackgroundColor="LightYellow" 
                   BorderColor="Orange"
                   Padding="15"
                   Margin="0,10,0,0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Free Tier Usage" FontAttributes="Bold" FontSize="16"/>
                    <ProgressBar Progress="{Binding UsagePercentage}" ProgressColor="Orange"/>
                    <Label Text="{Binding UsageText}" FontSize="14" TextColor="Gray"/>
                    <Button Text="Upgrade to Premium" 
                            Command="{Binding UpgradeCommand}"
                            BackgroundColor="Orange"
                            TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>
